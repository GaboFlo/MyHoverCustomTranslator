{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": [
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-console": "off",
    "no-unsanitized/method": "off",
    "no-unsanitized/property": "off"
  },
  "overrides": [
    {
      "files": [
        "dist/**/*.js"
      ],
      "rules": {
        "no-unsanitized/method": "off",
        "no-unsanitized/property": "off"
      }
    }
  ]
}