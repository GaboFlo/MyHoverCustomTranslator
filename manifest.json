{
    "manifest_version": 3,
    "name": "Traducteur personnalisé au survol",
    "version": "0.0.1",
    "description": "Extension de traduction au survol avec dictionnaire personnalisable",
    "browser_specific_settings": {
        "gecko": {
            "id": "myhover-translator@gaboflo.fr"
        }
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.js"
            ],
            "css": [
                "dist/styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "dist/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "dist/popup.html",
        "default_title": "Traducteur personnalisé au survol"
    }
}